<!-- Chat Widget -->
<div id="chat-widget">
    <!-- Chat Icon -->
    <div id="chat-icon" class="chat-icon">
        <i class="fas fa-comments"></i>
    </div>
    <!-- Chat Window -->
    <div id="chat-window" class="chat-window">
        <div class="chat-header bg-warning text-white">
            <h5 class="mb-0"><i class="fas fa-comments"></i> Chat with Admin</h5>
            <button id="close-chat" class="btn btn-sm btn-light"><i class="fas fa-times"></i></button>
        </div>
        <div id="messages" class="chat-body">
            <!-- Messages will appear here -->
            <!-- Example message bubbles -->
            <div class="message-bubble bot-message">
                <p>Hello! How can I help you today?</p>
            </div>
            <div class="message-bubble user-message">
                <p>Hi, I need some assistance.</p>
            </div>
        </div>
        <div class="chat-footer">
            <input type="text" id="messageInput" class="form-control" placeholder="Type your message...">
            <button id="sendButton" class="btn btn-primary"><i class="fas fa-paper-plane"></i></button>
        </div>
    </div>
</div>